rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isAdmin() { return request.auth != null && request.auth.token.admin == true; }

    match /users/{userId} {
      // Allow read so phone-based login can check existence before auth
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
    }

    // User notifications: only the owner can read/write their notifications
    match /notifications/{docId} {
      allow read, write: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /appointments/{appointmentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && (
        request.resource.data.userId == request.auth.uid || resource.data.userId == request.auth.uid
      ));
    }

    // Artists (formerly barbers)
    match /artists/{artistId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Keep backward compatibility if legacy data exists
    match /barbers/{barberId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /treatments/{treatmentId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /gallery/{imageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /artistTreatments/{docId} {
      allow read: if true;        // public can view treatments
      allow write: if isAdmin();
    }

    // Legacy barberTreatments collection for backward compatibility
    match /barberTreatments/{docId} {
      allow read: if true;        // public can view treatments
      allow write: if isAdmin();
    }

    match /artistAvailability/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Legacy availability collections used by app code
    match /availability/{docId} {
      allow read: if true;        // public can view availability
      allow write: if isAdmin();
    }

    match /barberAvailability/{docId} {
      allow read: if true;        // public can view availability
      allow write: if isAdmin();
    }

    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /shopItems/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Admin notification settings
    match /adminNotifications/{userId} {
      allow read, write: if isAdmin() && request.auth.uid == userId;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}


rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Profile images - authenticated users can upload
    match /profiles/{userId}/{fileName} {
      allow read: if true; // Profile images are publicly readable
      allow write: if request.auth != null &&
                      resource.size < 5 * 1024 * 1024 && // Max 5MB
                      resource.contentType.matches('image/.*');
    }
    
    // Gallery images - authenticated users can upload
    match /gallery/{fileName} {
      allow read: if true; // Gallery images are publicly readable
      allow write: if request.auth != null &&
                      resource.size < 10 * 1024 * 1024 && // Max 10MB
                      resource.contentType.matches('image/.*');
    }
    
    // Shop images - authenticated users can upload
    match /shop/{fileName} {
      allow read: if true; // Shop images are publicly readable
      allow write: if request.auth != null &&
                      resource.size < 10 * 1024 * 1024 && // Max 10MB
                      resource.contentType.matches('image/.*');
    }
    
    // Treatment images - authenticated users can upload
    match /treatments/{fileName} {
      allow read: if true; // Treatment images are publicly readable
      allow write: if request.auth != null &&
                      resource.size < 5 * 1024 * 1024 && // Max 5MB
                      resource.contentType.matches('image/.*');
    }
    
    // Barber images - authenticated users can upload
    match /barbers/{fileName} {
      allow read: if true; // Barber images are publicly readable
      allow write: if request.auth != null &&
                      resource.size < 5 * 1024 * 1024 && // Max 5MB
                      resource.contentType.matches('image/.*');
    }
    
    // Our team images - authenticated users can upload
    match /ourteam/{fileName} {
      allow read: if true; // Team images are publicly readable
      allow write: if request.auth != null &&
                      resource.size < 5 * 1024 * 1024 && // Max 5MB
                      resource.contentType.matches('image/.*');
    }
    
    // About us images - authenticated users can upload
    match /aboutus/{fileName} {
      allow read: if true; // About us images are publicly readable
      allow write: if request.auth != null &&
                      resource.size < 10 * 1024 * 1024 && // Max 10MB
                      resource.contentType.matches('image/.*');
    }
    
    // Temp uploads - authenticated users only
    match /temp/{userId}/{fileName} {
      allow read, write: if request.auth != null &&
                            resource.size < 20 * 1024 * 1024 && // Max 20MB
                            resource.contentType.matches('image/.*');
    }
    
    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}